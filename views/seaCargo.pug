
<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Bootstrap CSS -->
  style
    include ../node_modules/bootstrap/dist/css/bootstrap.min.css
  
  style
    include ../static/style.css

  script
    include ../static/index.js
  <title>Ocean Cargo Flow</title>
</head>

<body>
    <section id="selectSec">
      <ul>
        <li><a href="/">Port Entry</a></li>
        <li><a href="/Carrier">Carrier Entry</a></li>
        <li><a href="/seaCargo">Sea Cargo</a></li>
        <li><a href="/airCargo">Air Cargo</a></li>
      </ul>
    </section>
    section
    <section class="formSection">
      <div><button id="button1" class="btn btn-primary" type="button">new entry</button></div>
      form#formContainer(action="/submitSeaCargo" method="POST")
        input#originSeaPort(type="text", name="originSeaPort", placeholder="Enter name of Origin port" list="seaOrigins")
        datalist#seaOrigins 
          each seaOrigin in seaOrigins 
            option(value=`${seaOrigin.nameOfThePort},${seaOrigin.area},${seaOrigin.country}`)=`${seaOrigin.nameOfThePort},${seaOrigin.area},${seaOrigin.country}`
        input#destinationSeaPort(type="text", name="destinationSeaPort" placeholder="Enter destination port" list="seaDestinations")
        datalist#seaDestinations 
          each seaDestination in seaDestinations 
            option(value=`${seaDestination.nameOfThePort},${seaDestination.area},${seaDestination.country}`)=`${seaDestination.nameOfThePort},${seaDestination.area},${seaDestination.country}`
        select(name="seaCargoType")
          option(value="dg") Dengerous
          option(value="nonDg") Non Dengerous
        select(name="seaContainerType")
          option(value="20Ft") 20Ft
          option(value="40Ft") 40Ft
          option(value="40FtHQ") 40Ft HQ
          input(type="text", name="seaCargoFreeTime" placeholder="Enter free time")
          input(type="text" name="seaCargoTransitTime" placeholder="Enter transit time")
          input#seaCargoCarrier(type="text", name="seaCargoCarrier" placeholder="Enter carrier" list="seaCarriers")
          datalist#seaCarriers 
            each seaCarrier in seaCarriers 
              option(value=seaCarrier.nameOfTheCarrier)=seaCarrier.nameOfTheCarrier
          input(type="text", name="seaCargoTerms" placeholder="Terms And Conditions")
          input(type="text", name="seaCargoPrice" placeholder="Enter Price in USD")
          input(type="date" name="seaCargoValidityDate")
          button.btn.btn-primary(type='submit') Add
    </section>
    </section>
      table#seaCargoEntry.table 
        thead
          tr 
            th(scope="col") origin 
            th(scope="col") destination
            th(scope="col") type of cargo
            th(scope="col") type of contianer 
            th(scope="col") free time
            th(scope="col") transit time
            th(scope="col") carrier
            th(scope="col") Terms and conditions 
            th(scope="col") price(in USD)
            th(scope="col") valid till 
            th(scope="col") edit 
            th(scope="col") delete
        tbody
          each seaCargoEntry in seaCargoEntries
            tr
              td= seaCargoEntry.seaPortOrigin
              td= seaCargoEntry.seaPortDestination
              td= seaCargoEntry.seaCargotype
              td= seaCargoEntry.seaContainerType
              td= seaCargoEntry.seaFreeTime
              td= seaCargoEntry.seaTransitTime
              td= seaCargoEntry.seaCarrier
              td= seaCargoEntry.seaTerms
              td= seaCargoEntry.seaCargoPrice
              td= seaCargoEntry.seaCargoValidityDate
              td 
                a(href='/editSeaCargo/' + seaCargoEntry._id) Edit
              td 
                a(href='/deleteSeaCargo/' + seaCargoEntry._id) Delete       
    </section>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    script
      include ../node_modules/bootstrap/dist/js/bootstrap.min.js
</body>

</html>